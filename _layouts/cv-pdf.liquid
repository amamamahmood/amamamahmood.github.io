<article>
  {% if page.cv_pdf %}
    <iframe
      src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
      width="100%"
      height="900px"
      style="border:none;"
      loading="lazy"
    ></iframe>
  {% else %}
    <p>CV PDF not found. Please set <code>cv_pdf</code> in front matter.</p>
  {% endif %}
</article>
